APP_NAME="Mini ERP Laravel"
APP_ENV=production
APP_KEY=base64:generate-new-key-here
APP_DEBUG=false
APP_URL=http://localhost:8080

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# Configuração Docker MySQL (porta 3307 para não conflitar com Laragon)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=mini_erp
DB_USERNAME=root
DB_PASSWORD=rootpassword

# Para desenvolvimento local com Laragon, use:
# DB_HOST=127.0.0.1
# DB_PORT=3306

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Redis (opcional)
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@mini-erp.com"
MAIL_FROM_NAME="${APP_NAME}"
